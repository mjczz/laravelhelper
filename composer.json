{
    "name": "mjczz/laravelhelper",
    "description": "Supercharge your Laravel projects with more than 35 useful global helpers.",
    "keywords": [
        "mjczz",
        "helpers",
        "laravel"
    ],
    "homepage": "https://github.com/mjczz/laravelhelper",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "mjczz",
            "email": "mjczz1991@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.15",
        "ext-json": "*",
        "illuminate/support": "^7.0||^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "guzzlehttp/guzzle": "^6.5||^7.0",
        "phpunit/phpunit": "^8.5||^9.0"
    },
    "autoload": {
        "psr-4": {
            "mjczz\\LaravelHelper\\": "src"
        },
        "files": [
            "src/datetime.php",
            "src/filesystem.php",
            "src/helpers.php",
            "src/http.php",
            "src/objects.php",
            "src/services.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
